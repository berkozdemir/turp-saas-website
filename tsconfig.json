{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    
    // HATA DÜZELTİLDİ: DOMContentHitters kaldırıldı, DOM.Iterable eklendi.
    "lib": ["ES2020", "DOM", "DOM.Iterable"], 
    
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler Ayarları */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linter (Kod Kalitesi) Ayarları */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* JavaScript / JSDoc Kontrolü */
    "allowJs": true, 
    "checkJs": true 
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
